    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph">

    <fragment
        android:id="@+id/registration_fragment"
        android:name="com.example.tmsandroid.fragments.RegistrationFragment"
        android:label="@string/app_name"/>

    <fragment
        android:id="@+id/chats_fragment"
        android:name="com.example.tmsandroid.fragments.ChatsFragment"
        android:label="@string/hello_user"/>

    <fragment
        android:id="@+id/user_info_fragment"
        android:name="com.example.tmsandroid.fragments.UserInfoFragment"
        android:label="@string/hello_user"/>

    <action
        android:id="@+id/action_registration_to_chats"
        app:destination="@+id/registration_fragment"/>

    <action
        android:id="@+id/action_chats_to_user_info"
        app:destination="@+id/chats_fragment"/>

